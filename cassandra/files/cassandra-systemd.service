[Unit]
Description=Cassandra NoSQL database
Documentation=https://cassandra.apache.org/
After=network.target

[Service]
Type=forking
User=cassandra
Group=cassandra
ExecStart=/usr/sbin/cassandra -p /run/cassandra/cassandra.pid
PIDFile=/run/cassandra/cassandra.pid
WorkingDirectory=/var/lib/cassandra
LimitMEMLOCK=infinity
LimitNOFILE=100000
LimitNPROC=32768
LimitAS=infinity
Restart=always

[Install]
WantedBy=multi-user.target

